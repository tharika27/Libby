<!-- shelf_background.xml -->
<shape xmlns:android="http://schemas.android.com/apk/res/android">
    <solid android:color="#B3765E" /> <!-- Background color -->
    <corners android:radius="4dp" /> <!-- Rounded corners for shelves -->
    <stroke
        android:width="1dp"
        android:color="#000000" /> <!-- Border color -->
    <padding
        android:left="8dp"
        android:top="8dp"
        android:right="8dp"
        android:bottom="8dp" /> <!-- Padding to create space between shelves -->
</shape>